{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Jekyll",
            "type": "shell",
            "command": "ruby",
            "args": [
                "-S",
                "bundle",
                "exec",
                "jekyll",
                "serve",
                "--config",
                "_config.yml,_config_local.yml",
                "--host",
                "localhost",
                "--port",
                "4000"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}