{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Jekyll (local)",
            "type": "shell",
            "command": "ruby",
            "args": [
                "-S",
                "bundle",
                "exec",
                "jekyll",
                "serve",
                "--config",
                "_config_local.yml",
                "--host",
                "localhost",
                "--port",
                "4000"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "shell": {
                    "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
                    "args": [
                        "-lc"
                    ]
                }
            },
            "problemMatcher": []
        }
    ]
}